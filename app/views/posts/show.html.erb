See Post

<h2><%= @post.title %></h2>

<p><%= @post.content %></p>

<h4>Categories:</h4>

<% @post.categories.each do |category| %>
  <p><%= category.name %></p>
<% end %>

<h4>Comments:</h4>

<% @post.comments.each do |comment| %>
  <p><%= @comment.user_name %> : <%= comment.content %></p>
<% end %>

<h4>Comments by:</h4>

<% @post.unique_users.each do |user| %>
  <p><%= link_to user.username, user%></p>
<% end %>
